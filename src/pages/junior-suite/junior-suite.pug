extends ../../layout/layout

block content
	section.room-detail
		.room-detail__top
			.room-detail__top-bg
				+picture('js-001','jpg')
			.container 
				+breadcrumb(['Главная', 'Проживание'], 'Junior suite')
				.room-detail__top-text
					h1.h1 JUNIOR SUITE
					p  Прекрасный вариант для длительной поездки на Камчатку: просторный номер объединил в себе пространство для отдыха и вместительную гардеробную комнату. Классическая кровать размером EURO 200*200, современное освещение и уютный балкон, создают особую роскошную атмосферу.

				.room-detail__top-down
					<svg width="52" height="52" viewBox="0 0 52 52" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M26 1C12.1929 0.999999 1 12.1929 1 26C0.999999 39.8071 12.1929 51 26 51C39.8071 51 51 39.8071 51 26C51 12.1929 39.8071 1 26 1Z" stroke="white"/>
						<path d="M30 29L26 33M26 33L22 29M26 33L26 20" stroke="white"/>
						</svg>
		.container 
			.room-detail__content 
				.room-detail__content-row 
					div 
						h2 УДобства номера
						ul.room-detail__list-1
							li 
								img(src="img/r-icon-1.svg", alt="")
								p Площадь 39 квадратных метров

							li 
								img(src="img/r-icon-2.svg", alt="")
								p Бесплатный высокоскоростной беспроводной интернет (Wi-Fi)

							li 
								img(src="img/r-icon-3.svg", alt="")
								p Современный 55 LED телевизор, а также спутниковое телевидение

							li 
								img(src="img/r-icon-4.svg", alt="")
								p  Климат контроль с системой теплого пола

							li 
								img(src="img/r-icon-5.svg", alt="")
								p  Двуспальная кровать EURO 200*200

							li 
								img(src="img/r-icon-6.svg", alt="")
								p Мини-бар

					.room-detail__logo 
						img(src="img/c-logo-1.svg", alt="")
						img(src="img/c-logo-2.svg", alt="")
				ul.room-detail__list-2
					li Раскладывающийся диван (150*180)
					li Во всех номерах присутствует балкон
					li Просторная гардеробная
					li Эксклюзивные матрасы и постельное белье класса Премиум
					li Бесплатная минеральная вода для каждого гостя
					li Чайная станция
					li Гладильная доска и утюг (по запросу)
					li Удобный письменный стол
					li Электронный сейф
					li Телефон
					li Ванная комната с душем, фен, косметическое зеркало
					li Уютный махровый халат, тапочки, полотенца, люксовая косметика для душа
					li Круглосуточный room service

				.room-detail__list-2-desc 
					p 

				.room-detail__gallery.swiper 
					.swiper-wrapper 
						.swiper-slide(data-fancybox='gal',data-src="img/js-001.webp") 
							+picture('js-001','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-002.webp") 
							+picture('js-002','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-003.webp") 
							+picture('js-003','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-004.webp") 
							+picture('js-004','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-005.webp") 
							+picture('js-005','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-006.webp") 
							+picture('js-006','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-007.webp") 
							+picture('js-007','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-008.webp") 
							+picture('js-008','jpg')
						.swiper-slide(data-fancybox='gal',data-src="img/js-009.webp") 
