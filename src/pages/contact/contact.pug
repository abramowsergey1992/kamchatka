extends ../../layout/layout

block content
	section.contact(data-layer="1")
		.container 
			+breadcrumb(['Главная'], 'Контакты')
			h1 контакты
			.contact__top
				.contact-item
					.contact-item__label Адрес
					.contact-item__body 
						p Камчатский край, Паратунка, ул. Речная, 7
				.contact-item
					.contact-item__label Телефон
					.contact-item__body
						p
							a(href="tel:+79140202121")  +7 914 020-21-21
				.contact-item
					.contact-item__label Почта
					.contact-item__body
						p
							a(href="mailto:info@kamchatkachalet.ru")  info@kamchatkachalet.ru
			.contact__maps(data-marker="img/map-marker.svg")
				#map_1.contact__map
				#map_2.contact__map
				.contact__layers
					.contact__layers-bg
					button.contact__layer-btn._active(data-map="#map_2") Маршрут от&nbsp;Аэропорта «Елизово»
					button.contact__layer-btn(data-map="#map_1") Маршрут из г. Петропавловска-Камчатского
			.contact__footer
				.contact-item
					.contact-item__label Адрес
					.contact-item__body
						p Проехать до нас из аэропорта «Елизово» имени Витуса Беринга г. Петропавловска-Камчатского можно на такси, поездка займет ориентировочно 40 минут (35 км).
						p Если вы едете из г. Петропавловска-Камчатского, ваша поездка займет около 1 часа (50 км).
				.contact-item
					.contact-item__label Трансфер:
					.contact-item__body 
						p 
							a(href="mailto:info@kamchatkachalet.ru") info@kamchatkachalet.ru 
						p 
							a(href="tel:+79140202121") +7 (914) 020-21-21
