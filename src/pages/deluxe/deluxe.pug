extends ../../layout/layout

block content
	section.room-detail
		.room-detail__top
			.room-detail__top-bg
				+picture('l-001','jpg')
			.container 
				+breadcrumb(['Главная', 'Проживание'], 'DELUXE')
				.room-detail__top-text
					h1.h1 DELUXE
					p  Номера категории Deluxe с лаконичным, современным дизайном, располагают просторной гостиной и отдельной спальней. Все элементы авторского дизайна идеально сочетаются друг с другом и с вулканическим пейзажем, создавая неповторимую домашнюю атмосферу в центре необузданной природы на время Вашего пребывания.

				.room-detail__top-down
					<svg width="52" height="52" viewBox="0 0 52 52" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M26 1C12.1929 0.999999 1 12.1929 1 26C0.999999 39.8071 12.1929 51 26 51C39.8071 51 51 39.8071 51 26C51 12.1929 39.8071 1 26 1Z" stroke="white"/>
						<path d="M30 29L26 33M26 33L22 29M26 33L26 20" stroke="white"/>
						</svg>
		.container 
			.room-detail__content 
				.room-detail__content-row 
					div 
						h2 УДобства номера
						ul.room-detail__list-1
							li 
								img(src="img/r-icon-1.svg", alt="")
								p Общая площадь 48 квадратных метров, 2 комнаты

							li 
								img(src="img/r-icon-2.svg", alt="")
								p Бесплатный высокоскоростной беспроводной интернет (Wi-Fi);

							li 
								img(src="img/r-icon-3.svg", alt="")
								p Современный 55 LED телевизор, а также спутниковое телевидение;

							li 
								img(src="img/r-icon-4.svg", alt="")
								p  Климат контроль с системой теплого пола;

							li 
								img(src="img/r-icon-5.svg", alt="")
								p  Двуспальная кровать EURO 200*200

							li 
								img(src="img/r-icon-6.svg", alt="")
								p Мини-бар

					.room-detail__logo 
						img(src="img/c-logo-1.svg", alt="")
						img(src="img/c-logo-2.svg", alt="")
				ul.room-detail__list-2

					li Во всех номерах присутствует балкон
					li Просторная гардеробная
					li Эксклюзивные матрасы, изготовленные по специальному заказу
					li Постельное белье класса Премиум
					li Бесплатная минеральная вода для каждого гостя
					li Капсульная кофемашина с, ежедневно пополняемыми, кофейными капсулами, чайная станция
					li Гладильная доска и утюг (по запросу)
					li Удобный письменный стол
					li Электронный сейф
					li Телефон
					li Ванная комната с душем, фен, косметическое зеркало
					li Уютный махровый халат, тапочки, полотенца, люксовая косметика для душа
					li Раскладывающийся диван 150*180
					li Возможность установки дополнительной детской кроватки
					li Круглосуточный room service

				.room-detail__list-2-desc 
